
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Simple Airbnb</a>
    <%= link_to 'Add Flat', new_flat_path, class: "btn btn-outline-success my-2 my-sm-0 ms-2" %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="ms-auto flex">
        <form class="d-flex my-2 my-lg-0">
          <input class="form-control me-2" name="query" type="search" placeholder="Search" aria-label="Search" value="">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </div>
  </div>
</nav>
<div class="container w-100">
  <div id="flats">
    <% @flats.each do |flat| %>
      <p>
        <li><%= link_to flat.name, flat_path(flat), class:"text-decoration-none bold" %></li>
        <%= flat.address %>
        <%= flat.number_of_guests %>
        <%= flat.price_per_night %>
        <%= link_to "More info", flat_path(flat) %>
      </p>
    <% end %>
  </div>
</div>
